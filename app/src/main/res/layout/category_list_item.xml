<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/background_color_app"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_category_list"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_2sdp"
            android:layout_width="130dp"
            android:layout_height="195dp"/>
        <TextView
            android:id="@+id/tv_category_list_name"
            android:layout_below="@+id/iv_category_list"
            android:textColor="@color/fade_white"
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_category_list_release_date"
            android:layout_below="@+id/tv_category_list_name"
            android:textColor="@color/fade_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_category_list_rating"
            android:layout_below="@+id/tv_category_list_release_date"
            android:textColor="@color/fade_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>