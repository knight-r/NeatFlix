<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUpActivity">

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">
        <ImageView
            android:background="@drawable/ic_account_icon"
            android:layout_gravity="center"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/et_reg_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:layout_marginTop="@dimen/_60sdp"
            android:textColorHint="@color/fade_white"
            android:textColor="@color/white"
            android:hint="Username"
            android:minHeight="48dp"/>

        <EditText
            android:id="@+id/et_reg_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/fade_white"
            android:textColor="@color/white"
            android:hint="Address"
            android:minHeight="48dp"/>
        <EditText
            android:id="@+id/et_reg_dob"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/fade_white"
            android:textColor="@color/white"
            android:hint="Date of birth"
            android:minHeight="48dp"/>
        <EditText
            android:id="@+id/et_reg_phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textColorHint="@color/fade_white"
            android:textColor="@color/white"
            android:hint="Phone"
            android:minHeight="48dp"/>

        <EditText
            android:id="@+id/et_reg_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:textColorHint="@color/fade_white"
            android:textColor="@color/white"
            android:hint="Password"
            android:minHeight="48dp"/>

        <EditText
            android:id="@+id/et_reg_reset_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/fade_white"/>
        <TextView
            android:id="@+id/btn_reg_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:backgroundTint="@color/background_color_secondary_app"
            android:background="@drawable/round_corner"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_layout_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="Already have account? "
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_reg_login"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Login"
            android:textColor="@color/purple_200"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>